[worldserver]

###################################################################################################
#
#    일일 접속 보상 - 모듈 활성화 및 초기화 시간 설정
#        Description: 플레이어가 매일 접속할 때 골드 보상을 지급하는 모듈의 활성화 및 초기화 시간 설정입니다.
#        Author:      Kazamok, AzerothCore Community
#
###################################################################################################

#
#    LoginRewards.Enable
#        Description: 일일 접속 보상 모듈의 활성화 여부를 설정합니다.
#        Default:     1 - (활성화)
#                     0 - (비활성화)
#
LoginRewards.Enable = 1

#
#    LoginRewards.ShowModuleStatus
#        Description: 로그인 시 모듈 활성화 상태 메시지 표시 여부를 설정합니다.
#                     모든 플레이어에게 로그인 시 "접속 보상 모듈이 활성화되어 있습니다." 와 같은 안내를 표시합니다.
#        Default:     1 - (표시 함)
#                     0 - (표시 안 함)
#
LoginRewards.ShowModuleStatus = 1

#
#    LoginRewards.DailyResetHourKST
#        Description: 일일 보상이 초기화되는 시간을 한국 시간(KST, 0-23시)으로 설정합니다.
#                     예시: 0으로 설정하면 매일 자정(00:00)에 초기화됩니다.
#        Default:     4
#
LoginRewards.DailyResetHourKST = 4

#
#    LoginRewards.RewardDelaySeconds
#        Description: 로그인 후 보상을 지급하기까지 대기할 시간을 초 단위로 설정합니다.
#                     0으로 설정하면 즉시 지급됩니다.
#        Default:     60 (1분)
#
LoginRewards.RewardDelaySeconds = 1800

###################################################################################################
#
#    일일 접속 보상 - 보상 금액 및 메시지 설정
#        Description: 플레이어에게 지급될 골드 보상 금액과 보상 지급 시 표시될 메시지를 설정합니다.
#        Author:      Kazamok, AzerothCore Community
#
###################################################################################################

#
#    LoginRewards.DailyGoldAmount
#        Description: 일일 보상으로 지급할 골드 금액을 코퍼(Copper) 단위로 설정합니다.
#                     예시: 100골드를 지급하려면 1000000 으로 설정 (1골드 = 10,000코퍼)
#        Default:     100000
#
LoginRewards.DailyGoldAmount = 100000

#
#    LoginRewards.AnnounceMessage
#        Description: 보상 지급 시 플레이어에게 표시될 메시지를 설정합니다.
#                     %gold% 부분은 실제 지급된 골드 금액으로 자동 변경됩니다.
#        Default:     "일일 접속 보상으로 %gold%골드를 받았습니다!"
#
LoginRewards.AnnounceMessage = "일일 접속 보상으로 %gold%골드를 받았습니다!"

#
#    LoginRewards.ShowAnnounceMessage
#        Description: 보상 지급 메시지 표시 여부를 설정합니다.
#        Default:     1 - (표시 함)
#                     0 - (표시 안 함)
#
LoginRewards.ShowAnnounceMessage = 1

